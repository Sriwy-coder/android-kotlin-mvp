<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.detail.PaymentSuccessFragment">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="201dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_success_order"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Youâ€™ve Made Order"
        style="@style/TextView.PoppinsNormal20sp020202"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Just stay at home while we are\npreparing your best foods"
        android:textAlignment="center"
        android:layout_marginTop="6dp"/>

    <Button
        android:id="@+id/btnOtherFood"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Order Other Foods"
        android:textAllCaps="false"
        style="@style/Button.Primary"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btnViewOrder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View My Order"
        android:textAllCaps="false"
        style="@style/Button.Secondary"
        android:layout_marginTop="12dp"/>
</LinearLayout>