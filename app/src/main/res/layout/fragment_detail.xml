<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detail.DetailFragment">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_sample_product2"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_20_fff"
        android:paddingHorizontal="16dp"
        android:paddingVertical="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cherry Healthy"
            style="@style/TextView.PoppinsNormal16sp020202"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <RatingBar
            android:id="@+id/rbFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Makanan khas Bandung yang cukup sering\ndipesan oleh anak muda dengan pola makan\nyang cukup tinggi dengan mengutamakan\ndiet yang sehat dan teratur."
            style="@style/TextView.PoppinsNormal14sp8D92A3"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/rbFood"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitleIng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients:"
            style="@style/TextView.PoppinsNormal14sp020202"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvDesc"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Seledri, telur, blueberry, madu."
            style="@style/TextView.PoppinsNormal14sp8D92A3"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitleIng"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/btnOrderNow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Button.Primary"
            android:text="Order Now"
            android:textAllCaps="false"
            android:layout_marginTop="41dp"
            android:layout_marginStart="41dp"
            app:layout_constraintLeft_toRightOf="@id/tvTotalPrice"
            app:layout_constraintTop_toBottomOf="@id/tvIngredients"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitlePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price:"
            style="@style/TextView.PoppinsNormal13sp8D92A3"
            app:layout_constraintTop_toTopOf="@id/btnOrderNow"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDR 12.289.000"
            style="@style/TextView.PoppinsNormal18sp020202"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitlePrice"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_arrow_back_000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>